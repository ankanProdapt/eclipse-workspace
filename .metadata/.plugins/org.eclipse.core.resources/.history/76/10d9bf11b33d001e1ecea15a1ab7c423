package tennis;

public class Match {
	
	public static void updateMatch(Player winner, Player loser) {
		winner.setsWon++;
		winner.gamesWon = 0;
		loser.gamesWon = 0;
	}
	
	public static boolean isMatchOver(Player player1, Player player2) {
		return player1.setsWon >= 3 || player2.setsWon >= 3;
	}
}
