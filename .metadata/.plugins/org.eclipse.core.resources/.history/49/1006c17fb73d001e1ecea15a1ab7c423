package tennis;

public class Player {
	public String name;
	public int servesWon;
	public int gamesWon;
	public int setsWon;
	public String scoreString = "LOVE";

	public Player(String name) {
		this.name = name;
		servesWon = 0;
		gamesWon = 0;
		setsWon = 0;
	}

	public void wonServeAgainst(Player other) {
		Game.updateGame(this, other);
	}
	
}